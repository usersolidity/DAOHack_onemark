{
  "compilerOptions": {
      "baseUrl": ".",
      "allowJs": true,
      "target": "ES6",
      "module": "ES6",
      "moduleResolution": "node",
      "jsx": "react",
      "noImplicitAny": false,
      "sourceMap": true,
      "importHelpers": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "skipDefaultLibCheck": true,
      "skipLibCheck": true,
      "strictNullChecks": false,
      "outDir": "tmp",
      "paths": {
          "user-logic": ["external/user-logic/ts"],
          "user-logic/lib/*": ["external/user-logic/ts/*"],
          "ui-logic-core": ["external/ui-logic/packages/ui-logic-core/ts"],
          "ui-logic-core/lib/*": [
              "external/ui-logic/packages/ui-logic-core/ts/*"
          ],
          "ui-logic-react": ["external/ui-logic/packages/ui-logic-react/ts"],
          "ui-logic-react/lib/*": [
              "external/ui-logic/packages/ui-logic-react/ts/*"
          ],
          "simple-signalling": ["external/simple-signalling/ts"],
          "simple-signalling/lib/*": ["external/simple-signalling/ts/*"],
          "src/*": ["src/*"]
      },
      "lib": [
          "ES2019",
          "ES2020",
          "dom",
          "dom.iterable",
          "esnext.asynciterable"
      ]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "./src/**/*.js", "./src/**/*.jsx"]
}
